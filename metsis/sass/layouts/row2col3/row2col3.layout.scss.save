@import "compass";
//We don't want to have the overhead of bundler and co. so we import 
//breakpoint, singularity, toolkit etc. manually, using globbing here.
//ext_sass_libs contains external sass libraries 
//(copied over from /var/lib/gems/2.3.0/gems)
@import "../../../ext_sass_libs/**/*";


// Import variables, abstractions, base styles and components.
@import "../../variables/**/*";
@import "../../abstractions/**/*";
@import "../../base/**/*";
@import "../../components/**/*";


body{
    color: #000000;
}
.l-page{
    margin:0 auto;
    @include breakpoint($tab,true){
        width: $tab;
    }
    @include breakpoint($desk,true){
        width: $desk;
    }
}
.l-main{
    @include clearfix;
}
@include breakpoint($tab,true){
    .l-content{
        @include  grid-span(12,1);
    }
}
@include breakpoint($desk,true){
    .l-content{
        @include grid-span(12,1)
    }
}
.scalendar{
    @include grid-span(4,1);
    background: $sios-light-blue;
    color: #ffffff;
    min-height: 10em;
}
.smap{
    @include grid-span(4,5);
    background: $sios-light-blue;
    color: #ffffff;
    min-height: 10em;
}
.sposts{
    @include grid-span(4,9);
    background: $sios-light-blue;
    color: #ffffff;
    min-height: 10em;
}
.l-footer{
    @include grid-span(12,1);
    background: $sios-dark-blue;
    min-height: 10em;
}
.h-gutter{
    height: 5px;
}
.lower-content{
    background: #556743;
}
.node__content{
    background: $sios-light-blue;
}

.l-branding{
    background: $sios-dark-blue;
    min-height:180px;
}
.site-slogan{
    ;
}
.site-name{
    display: inline-block; 
    width: 80%;
}

